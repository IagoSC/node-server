{
  "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowJs": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
  },
  "include": [
      "src/**/*.ts"
  ]
}