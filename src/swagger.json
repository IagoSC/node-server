{
  "openapi": "3.0.0",
  "info":{
    "title": "Documentation test",
    "description": "This is an api to learn and test node and express",
    "version": "1.0.0",
    "contact": {
      "email":"iagosousavix@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post":{
        "tags": ["Category"],
        "summary": "Create a category",
        "description": "Create new Category",
        "requestBody": {
          "content": {
            "application/json":{
              "schema": {
                "type": "object",
                "properties": {
                  "name":{
                    "type": "string"
                  },
                  "description": {
                    "type" :"string"                    
                  }
                },
                "example": {
                  "name": "carrão",
                  "description": "um carrão muito bom"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary":"Get categories",
        "description": "Get categories",
        "responses": {
          "200": {
            "description":"Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "name": {
                      "type":"string"
                    },
                    "description": {
                      "type":  "string"
                    }
                  }
                }
              }
            }
          },
          "500": {"description":"Internal error"}
        }
      }
    }
  }
}